{
  "name": "find-and-jump",
  "displayName": "Find & Jump",
  "description": "Find a text and jump to it. Allows cycling through the results via a keybind.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "find-and-jump.activateSearchMode",
        "title": "Activate search mode"
      },
      {
        "command": "find-and-jump.exitSearchMode",
        "title": "Exit search mode"
      }
    ],
    "keybindings": [
      {
        "key": "alt+q",
        "command": "find-and-jump.activateSearchMode",
        "when": "editorTextFocus"
      },
      {
        "key": "escape",
        "command": "find-and-jump.exitSearchMode",
        "when": "editorTextFocus && find-and-jump.isSearchModeActive"
      },
      {
        "key": "tab",
        "command": "find-and-jump.cycleThroughResults",
        "when": "editorTextFocus && find-and-jump.isSearchModeActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "format": "prettier . --write"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "prettier": "^3.0.2",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
